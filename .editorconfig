root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

[*.bat]
end_of_line = crlf

[*.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
